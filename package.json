  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "arrowParents": "avoid"
  },
  "dependencies": {
    "@types/http-errors": "^1.8.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "hpp": "^0.2.3",
    "kill-port": "^1.6.1",
    "morgan": "^1.10.0",
    "openapi-types": "^7.2.3",
    "sequelize": "^6.6.2",
    "sqlite3": "^5.0.2",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^9.1.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.1",
    "yaml": "^1.10.2"
